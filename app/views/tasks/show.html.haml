.container
    .card_top
        %h2.section-top= @task.title
        .card_detail_actions
            .dropdown
                = image_tag 'actions.svg', class: 'dropbtn'
                .dropdown-content.mini
                    = link_to 'Edit', edit_board_task_path(@task.id)
                    = link_to 'Delete', board_task_path(@task.id), data: { method: 'delete', confirm: '本当に削除してもよろしいですか？' }
    .board
        .task_cotent
            = @task.content
        .task_limit
            = @task.limit.strftime('%Y年%m月%d日')
.container
    .card_top
        %h2.section-top= @board.title
        .card_detail_actions
            .dropdown
                = image_tag 'actions.svg', class: 'dropbtn'
                .dropdown-content.mini
                    = link_to 'Delete', board_path(@board.id), data: { method: 'delete', confirm: '本当に削除してもよろしいですか？' }
    .board
        .board_cotent
            = @board.description
        
    - if @board.tasks.present?
        - @board.tasks.each do |task|
            = link_to board_task_path(@board, task) do
                .card
                    .card_top
                        = task.title
                    .card_content
                        = task.content
                    .card_limit
                        = task.limit.strftime('%Y年%m月%d日')
                    .card_user
                        = image_tag 'icon_image', class: 'user_image'
    .card_add_board
        = link_to '+ Add new Card', new_board_task_path(@board)